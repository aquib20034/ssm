{
  "root": true,
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "parser": "@babel/eslint-parser"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [
          ["@assets", "./src/assets/*"],
          ["@components", "./src/components/*"],
          ["@/hooks/*", "./src/hooks/*"],
          ["@/store/*", "./src/store/*"],
          ["@/utils/*", "./src/utils/*"]
        ],
        "extensions": [".js", ".jsx", "ts", "tsx"]
      }
    }
  },
  "plugins": []
}
